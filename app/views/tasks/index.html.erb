<h1>TASK一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <tr>
        <th>TASK</th>
        <th>CONTENT</th>
        <th>STATUS</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %> 
      <tr>
        <td><%= link_to task.id, task %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
      </tr>
      <% end %>
  </tbody>
</table> 
  
<%= link_to '新規TASKの登録', new_task_path, class: "btn btn-primary"  %>